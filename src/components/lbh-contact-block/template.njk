<section class="lbh-contact">
  {% if params.title %}
    <h2 class="lbh-heading-large-light">{{ params.title }}</h2>
  {% endif %}
  {% if params.showSocial %}
    <div class="lbh-contact__social">
      <h4 class="lbh-heading-h4">Follow us on:</h4>
      {% if params.twitterLink %}
        <a class="lbh-contact__social-link lbh-contact__social-link--twitter" href="{{params.twitterLink}}" title="Follow us on Twitter">Twitter</a>
      {% endif %}
      {% if params.facebookLink %}
        <a class="lbh-contact__social-link lbh-contact__social-link--facebook" href="{{params.facebookLink}}" title="Follow us on Facebook">Facebook</a>
      {% endif %}
      {% if params.youtubeLink %}
        <a class="lbh-contact__social-link lbh-contact__social-link--youtube" href="{{params.youtubeLink}}" title="Follow us on YouTube">YouTube</a>
      {% endif %}
      {% if params.instagramLink %}
        <a class="lbh-contact__social-link lbh-contact__social-link--instagram" href="{{params.instagramLink}}" title="Follow us on Instagram">Instagram</a>
      {% endif %}
    </div>
  {% endif %}
  <div class="lbh-contact__details">
    {% if params.address %}
      <div class="lbh-contact__block">
        <h4 class="lbh-heading-h4 lbh-contact__title lbh-contact__title--address">Address<h4>
        <div class="lbh-contact__address">{{params.address|safe}}</div>
      </div>
    {% endif %}
    {% if params.telephones %}
      <div class="lbh-contact__block">
        <h4 class="lbh-heading-h4 lbh-contact__title lbh-contact__title--telephone">Telephone<h4>
        {% if params.telephones | length > 1 %}
          <ul class="lbh-contact__list">
            {% for tel in params.telephones %}
              <li class="lbh-contact__list-item">
                <a href="tel:{{tel.telephone}}" class="lbh-contact__telephone" title="Call us on {{tel.telephone}}">{{tel.telephone}}</a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          {% for telephone in params.telephone %}
            <a href="tel:{{tel.telephone}}" class="lbh-contact__telephone" title="Call us on {{tel.telephone}}">{{tel.telephone}}</a>
          {% endfor %}
        {% endif %}
      </div>
    {% endif %}
    {% if params.emails %}
      <div class="lbh-contact__block">
        <h4 class="lbh-heading-h4 lbh-contact__title lbh-contact__title--email">Email<h4>
        {% if params.emails | length > 1 %}
          <ul class="lbh-contact__list">
            {% for email in params.emails %}
              <li class="lbh-contact__list-item">
                <a href="mailto:{{email.email}}" class="lbh-contact__email" title="Email us on {{email.email}}">{{email.email}}</a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          {% for email in params.email %}
            <a href="mailto:{{email.email}}" class="lbh-contact__email" title="Email us on {{email.email}}">{{email.email}}</a>
          {% endfor %}
        {% endif %}
      </div>
    {% endif %}
    {% if params.openingTimes %}
      <div class="lbh-contact__block">
        <h4 class="lbh-heading-h4 lbh-contact__title lbh-contact__title--opening-times">Opening times<h4>
        <ul class="lbh-contact__list">
          {% for op in params.openingTimes %}
            <li class="lbh-contact__list-item">{{op.openingTimeEntry}}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    {% if params.notes %}
      <div class="lbh-contact__block">
        <h4 class="lbh-heading-h4 lbh-contact__title lbh-contact__title--notes">Notes<h4>
        <ul class="lbh-contact__list">
          {% for note in params.notes %}
            <li class="lbh-contact__list-item">{{note.note}}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>
  {% if params.showMap %}
    <div class="lbh-contact__map-container">
      <div class="lbh-contact__map" id="map" data-module="lbh-map"></div>
      {% if params.directionLink %}
        <a href="{{params.directionLink}}" class="lbh-contact__directions" rel="external" title="View directions on Google Maps">Get directions</a>
      {% endif %}
    </div>
  {% endif %}
</section>
